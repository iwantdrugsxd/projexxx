{
  "name": "projexx",
  "version": "1.0.0",
  "description": "A collaborative project management platform for students and faculty",
  "main": "index.js",
  "scripts": {
    "start": "concurrently \"npm run start:backend\" \"npm run start:frontend\"",
    "start:frontend": "cd frontend && PORT=3000 npm start",
    "start:backend": "cd backend && PORT=5001 npm start",
    "start:dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:frontend": "cd frontend && PORT=3000 npm start",
    "dev:backend": "cd backend && npm run dev",
    "build": "cd frontend && npm run build",
    "railway:start": "cd backend && npm start",
    "railway:build": "cd backend && npm install",
    "install:all": "npm install && cd frontend && npm install && cd ../backend && npm install",
    "clean": "rm -rf node_modules frontend/node_modules backend/node_modules frontend/build",
    "setup": "npm run install:all",
    "test:grading": "node test_grading_simple.js",
    "test:grading:full": "node test_grading_flow.js",
    "test:grading:frontend": "echo 'Open test_frontend_grading.html in your browser'",
    "vercel-build": "cd frontend && npm ci && npm run build"
  },
  "keywords": [
    "project-management",
    "collaboration",
    "education",
    "students",
    "faculty",
    "react",
    "nodejs",
    "mongodb"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "axios": "^1.12.2",
    "cloudinary": "^1.41.3",
    "form-data": "^4.0.4",
    "multer-storage-cloudinary": "^4.0.0",
    "node-fetch": "^3.3.2"
  }
}
